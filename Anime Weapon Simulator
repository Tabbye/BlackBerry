getgenv().AutoClick = false
getgenv().AutoEquip = false
getgenv().AutoQuest = false
getgenv().AutoClaim = false

--geting th ui
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()


function aClick() --name of this function
    while getgenv().AutoClick == true do wait() --says while getgenv().autoclick == true, loop and fire our click remote
        -- Script generated by SimpleSpy - fixed version for exploits other than synapse & krnl made by stummy#002 credits to exx#9394 for originally creating the script.

game:GetService("ReplicatedStorage"):WaitForChild("System"):WaitForChild("SystemClick"):WaitForChild("Click"):FireServer()


    end
end


local Window = Library.CreateLib("Blackberry Hub", "Midnight") --UI title/Window and themes

local Tab = Window:NewTab("Autofarm") --creating the tab name

local Section = Tab:NewSection("Auto Click") -- creating the section name in the tab

Section:NewToggle("Toggle", "This will auto click for you.", function(bool) --bool is basically toggle on
    getgenv().AutoClick = bool 
        if bool then --says if it = bool then fire our aClick() function we made up top
        aClick()
    end
end)


local Section = Tab:NewSection("Auto Equip Best")
function aEquip() --name of this function
    while getgenv().AutoEquip == true do wait(2) --says while getgenv().autoclick == true, loop and fire our click remote
        -- Script generated by SimpleSpy - fixed version for exploits other than synapse & krnl made by stummy#002 credits to exx#9394 for originally creating the script.

local args = {
    [1] = "\232\163\133\229\164\135\230\156\128\228\189\179\230\173\166\229\153\168"
}

game:GetService("ReplicatedStorage"):WaitForChild("Msg"):WaitForChild("RemoteEvent"):FireServer(unpack(args))


    end
end
Section:NewToggle("Toggle", "This will auto equip best for you.", function(bool) --bool is basically toggle on
    getgenv().AutoEquip = bool 
        if bool then --says if it = bool then fire our aClick() function we made up top
        aEquip()
    end
end) 

