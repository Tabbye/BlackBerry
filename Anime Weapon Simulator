local Section = Tab:NewSection("Auto Claim Quest")
function aClaim() --name of this function
    while getgenv().AutoClaim == true do wait(2) --says while getgenv().autoclick == true, loop and fire our click remote
        -- Script generated by SimpleSpy - fixed version for exploits other than synapse & krnl made by stummy#002 credits to exx#9394 for originally creating the script.

local args = {
    [1] = "\233\162\134\229\143\150\228\187\187\229\138\161\229\165\150\229\138\177",
    [2] = 101010003
}

game:GetService("ReplicatedStorage"):WaitForChild("Msg"):WaitForChild("RemoteEvent"):FireServer(unpack(args))




    end
end
Section:NewToggle("Toggle", "This will auto claim rewards from quest for you.", function(bool) --bool is basically toggle on
    getgenv().AutoClaim = bool 
        if bool then --says if it = bool then fire our aClick() function we made up top
        aClaim()
    end
end) 
