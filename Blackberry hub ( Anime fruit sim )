 getgenv().KA = false
 getgenv().SS = false
 getgenv().SS2 = false
 getgenv().SS3 = false
--geting the ui
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()


function ka() --name of this function
while getgenv().KA == true do wait(0) --says while getgenv().autoclick == true, loop and fire our click remote
-- Script generated by SimpleSpy - fixed version for exploits other than synapse & krnl made by stummy#002 credits to exx#9394 for originally creating the script.

game:GetService("ReplicatedStorage").Remotes.Attack:FireServer()



    end
end


local Window = Library.CreateLib("BlackBerry Hub", "Midnight") --UI title/Window and themes

local Tab = Window:NewTab("Autofarm") --creating the tab name

local Section = Tab:NewSection("KillAura") -- creating the section name in the tab

Section:NewToggle("Killaura", "This will attack for you.", function(bool) --bool is basically toggle on
    getgenv().KA = bool 
        if bool then --says if it = bool then fire our aClick() function we made up top
        ka()
    end
end) 

function Skill() --name of this function
while getgenv().SS == true do wait(0) --says while getgenv().autoclick == true, loop and fire our click remote
-- Script generated by SimpleSpy - fixed version for exploits other than synapse & krnl made by stummy#002 credits to exx#9394 for originally creating the script.

local args = {
    [1] = "One"
}

game:GetService("ReplicatedStorage").Remotes.Validate:FireServer(unpack(args))




    end
end
