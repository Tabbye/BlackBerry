local Section = Tab:NewSection("SkillSpam")
Section:NewToggle("1", "This will Spam skill 1 for you.", function(bool) --bool is basically toggle on
    getgenv().SS = bool 
        if bool then --says if it = bool then fire our aClick() function we made up top
        Skill()
    end
end) 
