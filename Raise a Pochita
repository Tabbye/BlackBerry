getgenv().autoClick = false

--geting th ui
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()


function aClick() --name of this function
    while getgenv().autoClick == true do wait() --says while getgenv().autoclick == true, loop and fire our click remote
        -- Script generated by SimpleSpy - fixed version for exploits other than synapse & krnl made by stummy#002 credits to exx#9394 for originally creating the script.

local args = {
    [1] = game:GetService("Players").LocalPlayer
}

workspace.pochita.Part.RemoteEvent:FireServer(unpack(args))

    end
end


local Window = Library.CreateLib("Blackberry Hub", "Midnight") --UI title/Window and themes

local Tab = Window:NewTab("Autofarm") --creating the tab name

local Section = Tab:NewSection("Autoclick") -- creating the section name in the tab

Section:NewToggle("Toggle", "This will auto click for you.", function(bool) --bool is basically toggle on
    getgenv().autoClick = bool 
        if bool then --says if it = bool then fire our aClick() function we made up top
        aClick()
    end
end)
